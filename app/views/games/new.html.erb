  <%= f.date_select :played_at, order: %i[day month year] %>
  <br>
  <h2> Participating Players: </h2>
  <% @players = Player.pluck(:name, :id) %>
  <%= f.collection_select :player, @players, :to_s, :to_s, include_blank: false %>
  <%= f.collection_select :player, @players, :to_s, :to_s, include_blank: false %>

  <%= f.submit %>
<% end %>
