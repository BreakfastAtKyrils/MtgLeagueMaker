<div class="level">
  <div class="level-left title">
    <h1 style="color:green;"> Montreal EDH league </h1>
  </div>
</div>

<%= render layout: 'components/nav_bar', locals: { title: 'Listing Games' } do %>
  <%= link_to 'Create a New Game', new_game_path, class: 'button is-light' %>
<% end %>

<div style="display:flex;">
  <table class="table is-bordered">
    <thead>
      <tr>
        <th>Pending Games</th>
      </tr>
    </thead>

    <tbody>
      <% @games.each do |game| %>
        <% if game.state == 'pending' %>
          <tr>
            <td><%= link_to game.played_at.strftime('%d %B, %Y'), game_path(game) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <table class="table is-bordered">
    <thead>
      <tr>
        <th>Completed Games</th>
      </tr>
    </thead>

    <tbody>
      <% @games.each do |game| %>
        <% if game.state == 'completed' %>
          <tr>
            <td><%= link_to game.played_at.strftime('%d %B, %Y'), game_path(game) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
