<h1>Listing Players</h1>

<tbody>
    <% @players.each do |player| %>
    <br>
    <br>
      <tr>
        <td>Player name: <%=player.name %></td>
        <br>
        <td>Player's decks: <% decks = Deck.all.select { |deck| deck.player_id == player.id} %></td>
        <% decks.each do |deck| %>
        <tr>
          <td><%= deck.name %></td>
        </tr>
        <% end %>
      </tr>
    <% end %>
  </tbody>

