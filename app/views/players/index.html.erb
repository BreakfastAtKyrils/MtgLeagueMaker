<div class="level">
  <div class="level-left title">
    <h1 style="color:green;"> Montreal EDH league </h1>
  </div>
</div>

<%= render layout: 'components/nav_bar', locals: { title: 'Listing Players' } do %>
  <%= link_to 'Create a New Player', new_player_path, class: 'button is-light' %>
<% end %>

<table class="table is-bordered">
  <thead>
    <tr>
      <th>Player</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player_path(player) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render layout: 'components/nav_bar', locals: { title: 'Listing Games' } do %>
  <%= link_to 'Create a New Game', new_game_path, class: 'button is-light' %>
<% end %>
